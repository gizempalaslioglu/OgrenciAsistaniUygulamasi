<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".yoklama.activities.RegisterCourseActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_courses_to_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progress_bar_loading_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_you_not_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Henüz bir derse kaydolmadınız"
        android:textColor="#000"
        android:visibility="gone"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>